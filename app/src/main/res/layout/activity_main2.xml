<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".mvp.Main2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/citys_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:textColor="@color/white"
            android:text=""

            android:scaleType="center"
            android:textSize="18sp"

            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_gravity="top|center"
        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/citys_temp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:gravity="right|center"
            android:textSize="25sp"
            android:textStyle="bold"
            />


        <ImageView
            android:id="@+id/citys_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:layout_toRightOf="@+id/citys_temp"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:contentDescription="@null"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="top|center"
            android:orientation="vertical"


            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:layout_gravity="left"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/citys_pres"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="left|center"
                android:layout_toRightOf="@+id/citys_temp"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/pressure"
                android:tint="@color/col1"
                />
                <TextView
                    android:id="@+id/citys_pres2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center|top"
                    android:textColor="@color/col1"
                    android:text=""
                    android:scaleType="center"
                    android:textSize="18sp"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"


                >
                <ImageView
                    android:id="@+id/citys_humid"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/citys_temp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:src="@drawable/humidity"
                    android:tint="@color/col1"
                    />
                <TextView
                    android:id="@+id/citys_humid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center|top"
                    android:textColor="@color/col1"
                    android:text=""
                    android:scaleType="center"
                    android:textSize="18sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"


                >
                <ImageView
                    android:id="@+id/citys_wind"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/citys_temp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:src="@drawable/wind1"
                    android:tint="@color/col1"
                    />
                <TextView
                    android:id="@+id/citys_wind2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center|top"
                    android:textColor="@color/col1"
                    android:text=""
                    android:scaleType="center"
                    android:textSize="18sp"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/citys_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:textColor="@color/white"
            android:text=""

            android:scaleType="center"
            android:textSize="18sp"

            />
        <TextView
            android:id="@+id/citys_temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:textColor="@color/col1"
            android:text=""
            android:scaleType="center"
            android:textSize="18sp"

            />
    </LinearLayout>



</RelativeLayout>